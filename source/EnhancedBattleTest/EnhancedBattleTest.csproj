<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <ProcessorArchitecture>amd64</ProcessorArchitecture>
    <LangVersion>8</LangVersion>
    <RunPostBuildEvent>OnBuildSuccess</RunPostBuildEvent>
