  <Import Project="$(MSBuildProjectDirectory)\*.props" />
  <ItemGroup>
    <PackageReference Include="Lib.Harmony" Version="2.0.4" />
  </ItemGroup>
  <ItemGroup>
	  <DotNetCliToolReference Include="dotnet-md2html" Version="1.0.0.1-preview1" />
  </ItemGroup>
  <ItemGroup>
